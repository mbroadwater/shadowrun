<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="character_form">
        <%= render 'shared/character_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Character Feed</h3>
      <%= render 'shared/character_feed' %>
    </div>
  </div>
<% else %>

<div class="center jumbotron">
  <h1>Welcome to ShadowGuild</h1>

  <h2>
    This is the home page for the ShadowGuild, an RPG site.
  </h2>

</div>
<% end %>
