<%= form_for([@character, @character.char_attributes.build]) do |f| %>
  <div class="row">
    <div class="col-md-3">
      <%= f.select(:base_attribute_id) do %>
        <% BaseAttribute.all.each do |base_attribute| -%>
          <% if base_attribute.id > 11 %>
            <%= content_tag(:option, base_attribute.name, value: base_attribute.id) %>
          <% end %>
        <% end %>
      <% end %>
    </div>

      <div class="col-md-1">
        <%= f.label "Base" %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :value_base %>
      </div>
      <div class="col-md-2">
        <%= f.label "Augmented" %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :value_modified %>
      </div>

    <div class="col-md-2">
      <%= f.submit "Add Attribute", class: "btn btn-xs btn-default col-md-6 col-md-offset-3 " %>
    </div>
  </div>
<% end %>
