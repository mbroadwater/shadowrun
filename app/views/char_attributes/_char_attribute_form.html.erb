<h2>Add New Attribute</h2>
<%= form_for([@character, @character.char_attributes.build]) do |f| %>
  <%= f.label "Attribute" %>
  <%= f.select(:base_attribute_id) do %>
    <% BaseAttribute.all.each do |base_attribute| -%>
      <%= content_tag(:option, base_attribute.name, value: base_attribute.id) %>
    <% end %>
  <% end %>

  <p>
    <%= f.label "Base" %>
    <%= f.number_field :value_base %>
  </p>
  <p>
    <%= f.label "Augmented" %>
    <%= f.number_field :value_modified %>
  </p>
  <p>
    <%= f.submit "Add Attribute", class: "btn btn-default" %>
  </p>
<% end %>
