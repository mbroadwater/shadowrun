<h2>Defenses</h2>


  <%= form_for(@character) do |f| %>
    <%= f.fields_for :defenses do |f2| %>
      <div class="row">
        <div class="col-md-4">
          <%= f2.label :def_type, "#{f2.object.def_type}"%>
        </div>
        <div class="col-md-2  col-md-offset-2">
          <%= f2.number_field :value_normal, in: 0..50, step: 1 %>
        </div>
        <div class="col-md-2">
          <% defense = Defense.find(f2.object.id) %>
          <%= link_to 'Delete', [defense.character, defense],
            method: :delete,
            class: "btn btn-default btn-xs",
            data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-3 col-md-offset-3">
        <%= f.submit "Update", class: "btn btn-default btn-xs" %>
      </div>
      <div class="col-md-3">
        <%= f.submit "Cancel", class: "btn btn-default btn-xs" %>
      </div>
    </div>
  <% end %>
