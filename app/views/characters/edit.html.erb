<% if current_user?(@character.user) %>
  <% provide(:title, "Edit character") %>
  <h1>Edit your character</h1>

  <div class="row">
    <div class="col-md-12">
      <%= render 'characters/character_form', is_new: false  %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= render 'char_attributes/edit_char_attributes' %>
    </div>
    <div class="col-md-4">
      <%= render 'active_skills/show_active_skills', can_edit: true %>
    </div>
    <div class="col-md-4">
      <%= render 'defenses/show_defenses', can_edit: true %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
    </div>

    <div class="col-md-4">
      <%= render 'active_skills/active_skills_form'%>
    </div>

    <div class="col-md-4">
      <%= render 'defenses/defense_form' %>
    </div>
  </div>
<% end %>
