<%= form_for([@character, @character.active_skills.build]) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <strong>Add New Skill</strong>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <%= f.select(:base_skill_id) do %>
        <% BaseSkill.all.each do |base_skill| -%>
          <%= content_tag(:option, base_skill.name, value: base_skill.id) %>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-1">
    </div>
    <div class="col-md-2">
      <%= f.number_field :value_base %>
    </div>
    <div class="col-md-3">
      <%= f.submit "Add", class: "btn btn-xs btn-default col-md-6 col-md-offset-3 " %>
    </div>
  </div>
<% end %>
